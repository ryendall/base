{
    "name": "ryendall/base",
    "description": "Basic API based on the SLIM PHP framework. Created by extending https://github.com/slimphp/Slim-Skeleton by Josh Lockhart",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "license": "MIT",
    "authors": [
        {
            "name": "Richard Yendall",
            "email": "rly201602@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^2.0.0-beta1",
        "php-curl-class/php-curl-class": "^8.5",
        "tuupola/slim-basic-auth": "^3.2",
        "php-di/php-di": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0,
        "platform": {
            "php": "7.2"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    },
    "autoload": {
        "psr-4": {
            "": "src/classes/"
        }
    }
}
